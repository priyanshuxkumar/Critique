generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  avatar   String?
  email    String @unique
  password String

  reviews Review[]
}

model Website {
  id      String @id @default(uuid())
  name    String
  websiteUrl  String
  iconUrl String
}

model Review {
  id      String @id @default(uuid())
  content String
  userId  Int    @unique
  user    User   @relation(fields: [userId], references: [id])
}
